# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Database (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sleep-tracker?retryWrites=true&w=majority

# CORS Configuration (optional - leave empty to allow all origins)
FRONTEND_URL=http://localhost:4200

# JWT Authentication (REQUIRED for auth endpoints)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30